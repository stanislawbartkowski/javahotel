<?xml version="1.0"?>
<dialog xmlns="http://www.jythongwt.dialogxsd.com">

<before/>
 
 <jython>
   <import>from testpack import main</import>
   <method>main.dialogaction({0},{1})</method>
 </jython>  

<leftmenu>
  <button id="main" displayname="Main form"/>
  
  <button id="okmessage" displayname="Ok Message" actiontype="JOK_MESSAGE" actionparam="Hello" actionparam1="Title" />
  <button id="errmessage" displayname="Err Message" actiontype="JERROR_MESSAGE" actionparam="Terrible error" actionparam1="Fatal" />

  <button id="list" displayname="List" actiontype="JMAIN_DIALOG" actionparam="list.xml"/>
  <button id="updialog" displayname="Dialog" actiontype="JUP_DIALOG" actionparam="updialog.xml"/>
  <button id="dcombo" displayname="Combo dialog" actiontype="JMAIN_DIALOG" actionparam="dialcombo.xml" />
  <button id="dhelper" displayname="Helper dialog" actiontype="JMAIN_DIALOG" actionparam="helperdialog.xml" />
  <button id="dtext" displayname="Text area" actiontype="JMAIN_DIALOG" actionparam="textdialog.xml" />
  <button id="dlist" displayname="Time list" actiontype="JMAIN_DIALOG" actionparam="timelist.xml" />
  <button id="dialog1" displayname="Next dialog" actiontype="JMAIN_DIALOG" actionparam="dialog1.xml" />
  <button id="listw" displayname="List" actiontype="JMAIN_DIALOG" actionparam="listw.xml" />
  <button id="list chunk" displayname="List chunk" actiontype="JMAIN_DIALOG" actionparam="listchunk.xml" />
  <button id="check list" displayname="Check list" actiontype="JMAIN_DIALOG" actionparam="checklist.xml" />
</leftmenu>

<buttons>
  <button id="tomain" displayname="Popup dialog"/>
</buttons>

 <form>
   <field id="glob1" />
   <field id="globbool" type="bool" notempty="" />
   <field id="globint" type="int" displayname="Integer value" />
   <field id="globlong" type="int" displayname="Long value" />
   <field id="globdecimal" type="decimal" afterdot="2" displayname="Decimal" />
   <field id="globdate" type="date" displayname="Date" />
   <field id="globdatetime" type="datetime" displayname="Date and time" />   
 </form>  
 
</dialog>

