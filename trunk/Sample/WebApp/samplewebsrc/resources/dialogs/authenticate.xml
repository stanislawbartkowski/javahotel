<?xml version="1.0"?>
<dialog xmlns="http://www.jythongwt.dialogxsd.com">

<before/>
 
 <jython>
   <import>from testpack import authen</import>
   <method>authen.dialogaction({0},{1})</method>
 </jython>  
 
 <leftmenu>
<button id="showlist" displayname="List" actiontype="JMAIN_DIALOG" actionparam="authlist.xml" />
</leftmenu> 

<buttons>
<button id="copy" displayname="Copy" />
<button id="copyup" displayname="Copy Up" hidden="$!sec.u('user') &amp;&amp; !sec.u('viewer')" readonly="$sec.u('viewer')" actiontype="JOK_MESSAGE" actionparam="Top secret" actionparam1="Title" />
</buttons>

 <form>
   <field id="firstname" displayname="First name (all)" />
   <field id="lastname" displayname="Last name (user can edit)" readonly="$!sec.u('user')" />
   <field id="secret" displayname="Secret (user can edit,viewer can look at, guest no )" hidden="$sec.u('guest')" readonly="$sec.u('viewer')" />
   
   <field id="copyfirstname" displayname="First name" readonly=""/>
   <field id="copylastname" displayname="Last name" readonly="" />
   <field id="copysecret" displayname="Secret" hidden="$sec.u('guest')" readonly="$!sec.u('guest')" />
   
 </form>  
 
 
 
</dialog>