<?xml version="1.0"?>
<dialog xmlns="http://www.jythongwt.dialogxsd.com" displayname="Check in">

	<before />

	<jython>
		<import>from hotelpack.reservation import checkin</import>
		<method>checkin.checkinaction({0},{1})</method>
	</jython>

	<buttons>
		<button id="accept" displayname="Check in" actiontype="JYESNO_MESSAGE" actionparam="Are you sure to check them in ?"
			actionparam1="Checkin confirmation" actionparam2="makecheckin" />
		<button id="resign" displayname="@resign" actiontype="JCLOSE_DIALOG" />
	</buttons>
	
	<list id="checkinlist" displayname="Persons to rooms" pagesize="5">
		<standbutt>TOOLS,FIND,FILTER</standbutt>
  		<buttons-addlist>makecheckin</buttons-addlist> 
		<columns>
			<column id="roomid" displayname="Room name" />
			<column id="roomdesc" displayname="Description" />
<!--  guest description -->			
            <column id="guestselect" displayname="Name" actionid="selectguest" editable=""/>
			<column id="name" displayname="id"/>
			<column id="descr" displayname="Guest description" editable="" helper="guestdetails" />
			<column id="firstname" displayname="Guest first name" editable=""/> 
			<column id="companyname" hidden=""/>
			<column id="street" hidden="" />
			<column id="zipcode" hidden=""/>
			<column id="email" hidden=""/>
			<column id="phone" hidden="" />
			
		</columns>
	</list>



</dialog>