<?xml version="1.0"?>
<dialog xmlns="http://www.jythongwt.dialogxsd.com" displayname="Confirm bill">

        <before />

        <jython>
                <import>from hotelpack.reservation import createbill</import>
                <method>createbill.payerbill({0},{1})</method>
        </jython>
        
        <buttons>
                <button id="accept" displayname="Issue bill" actiontype="JYESNO_MESSAGE" actionparam="Are you sure to issue this bill ?"
                        actionparam1="Confirmation"/>
                <button id="resign" displayname="@resign" actiontype="JCLOSE_DIALOG" />
        </buttons>
        
        <list id="paybill" displayname="Position for bill" pagesize="10">
                <standbutt>TOOLS,FIND,FILTER</standbutt>
                <columns>
                        <column id="idp" type="long" hidden="" />
                        <column id="room" displayname="Room" />
                        <column id="resday" type="date" displayname="Night" />
                        <column id="servday" type="date" displayname="Day" />
                        <column id="guest" displayname="Guest" />
                        <column id="service" displayname="Service" />
                        <column id="servdescr" displayname="Description" />
                        <column id="total" type="decimal" displayname="Price" footer="" />
                </columns>
       </list>

</dialog>