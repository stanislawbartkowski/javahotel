<?xml version="1.0"?>
<dialog xmlns="http://www.jythongwt.dialogxsd.com" displayname="@guestdetails">

	<before />

        <types>hotel/typesenum.xml</types>

	<jython>
		<import>from hotelpack.reservation import custdetails</import>
		<method>custdetails.showcustdetails({0},{1})</method>
	</jython>

	<form >
                <field id="cust_name" displayname="@guestid" readonly="" />
                <field id="cust_descr" displayname="@description" hidden="" readonly=""/>
                <field id="cust_title" displayname="@title" type="custom:titles" notempty="" readonly="" />
                <field id="cust_surname" displayname="@surname" readonly=""/>
                <field id="cust_firstname" displayname="@firstname" readonly=""/>
                <field id="cust_country" displayname="@country" type="custom:countries" readonly=""/>
                <field id="cust_region" displayname="@region" readonly=""/>
                <field id="cust_postalcode" displayname="@postalcode" readonly=""/>
                <field id="cust_city" displayname="@city" readonly=""/>
                <field id="cust_street" displayname="@street" readonly=""/>
                <field id="cust_email" displayname="@email" readonly=""/>
                <field id="cust_phone1" displayname="@phone1" readonly=""/>
                <field id="cust_phone2" displayname="@phone2" readonly=""/>
                <field id="cust_fax" displayname="@fax" readonly=""/>
                <field id="cust_doctype" displayname="@doctype" type="custom:idtypes" notempty="" readonly=""/>
                <field id="cust_docnumb" displayname="@docnumb" readonly="" />
	</form>

</dialog>