<?xml version="1.0"?>
<dialog xmlns="http://www.jythongwt.dialogxsd.com" displayname="Make reservation">

	<before />

	<types>hotel/reservation/restypes.xml</types>


	<jython>
		<import>from hotelpack.reservation import reserroom</import>
		<method>reserroom.reseraction({0},{1})</method>
	</jython>

	<buttons>
		<button id="checkaval" displayname="Check availability"
			validate="" />
		<button id="custdetails" displayname="Customer details" />
		<button id="askforreservation" displayname="Make reservation"
			validate="" />
	</buttons>

	<form>
		<field id="resename" hidden=""/>
		<field id="name" displayname="Room" readonly="" />
		<field id="nop" type="int" displayname="@nopersons" readonly="" />
		<field id="desc" displayname="@description" readonly="" />
		<field id="datecol" type="date" displayname="First night"
			readonly="" />
		<field id="resdays" type="int" displayname="Number of nights"
			notempty="" />
		<field id="roompricelist" type="custom:roompricelist"
			displayname="Price list" notempty="" signalchange="" />
		<field id="roomservice" type="custom:roomservice" displayname="Service"
			notempty="" signalchange="" />
		<!-- cust description -->
		<field id="cust_name" displayname="@name" hidden="" />
		<field id="cust_descr" displayname="Guest name" />
		<field id="cust_firstname" displayname="@firstname" />
		<field id="cust_companyname" displayname="@companyname" hidden="" />
		<field id="cust_street" displayname="@street" hidden="" />
		<field id="cust_zipcode" displayname="@zipcode" hidden="" />
		<field id="cust_email" displayname="@email" hidden="" />
		<field id="cust_phone" displayname="@phone" hidden="" />

	</form>

	<list id="reslist" displayname="Reservation details" pagesize="5">
		<standbutt>TOOLS,FIND,FILTER</standbutt>
		<columns>
			<column id="avail" type="bool" displayname="A" />
			<column id="name" displayname="@name" />
			<column id="resday" type="date" displayname="Night" />
			<column id="price" type="decimal" displayname="Price" footer="" />
		</columns>
	</list>

</dialog>