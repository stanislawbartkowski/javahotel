<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	<ui:with field='cc' type='com.ibm.sampledb.client.Message' />

	<g:VerticalPanel width='70EM' borderWidth="1">

		<g:Label ui:field="title" />
		<c:SimplePager ui:field='pager'></c:SimplePager>
		<c:CellTable ui:field='table'></c:CellTable>
		<g:HorizontalPanel>
			<g:Button ui:field='upload' text='{cc.AddNewDoc}'></g:Button>
			<g:Button ui:field='remove' text='{cc.DeleteDoc}'></g:Button>
			<g:Button ui:field='download' text='{cc.DownloadDoc}'></g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 