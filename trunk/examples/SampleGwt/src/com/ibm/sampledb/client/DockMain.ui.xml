<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

	<ui:with field='cc' type='com.ibm.sampledb.client.Message' />

	<g:DockLayoutPanel unit='EM'>
		<g:north size='2'>
			<g:HorizontalPanel spacing="4">
				<g:Label text='{cc.SortedBy}' />
				<g:ListBox ui:field='listBox' />
				<g:RadioButton ui:field='incRadio' value='true' name="order"
					text='{cc.Inc}'></g:RadioButton>
				<g:RadioButton ui:field='decRadio' value='false' name="order"
					text='{cc.Dec}'></g:RadioButton>
			</g:HorizontalPanel>
		</g:north>

		<g:center>
			<g:VerticalPanel width='100%'>
				<c:SimplePager ui:field='pager'></c:SimplePager>
				<c:CellTable ui:field='table'></c:CellTable>
			</g:VerticalPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>