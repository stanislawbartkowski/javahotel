<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.google.gwt.widget.client">
	<ui:style>
    .border { background-color: #CACACA; border-color : #CACACA; padding : 5px; }
	</ui:style>
	<g:HTMLPanel width="80%" styleName="dialogVPanel" height="100%">
		<g:DockPanel width="100%" height="100%">
			<g:Dock direction="NORTH" width="">
				<g:HorizontalPanel height="15px" width="100%" styleName="{style.border}">
					<g:Label text="IBM InfoSphere Streams - visualizer"
						horizontalAlignment="ALIGN_LEFT" />
					<g:Label ui:field="errLabel" width="10%" />
					<g:ListBox ui:field="listOfHosts" />
					<g:ListBox ui:field="listOfInstance" />
					<g:Button text="Go" ui:field="button" />
					<w:TextButton text="Connections" ui:field="textButton">New button</w:TextButton>
				</g:HorizontalPanel>
			</g:Dock>
			<g:Dock direction="CENTER">
				<g:Grid ui:field = "centrePanel" />
			</g:Dock>
		</g:DockPanel>
	</g:HTMLPanel>
</ui:UiBinder> 