<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<ui:with type="com.ibm.mystreams.client.VConstants" field="M"></ui:with>
	<g:HTMLPanel>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label text="{M.hostLabel}" />
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="host" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="{M.portLabel}" />
				</g:customCell>
				<g:customCell>
					<g:IntegerBox ui:field="port" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="{M.userLabel}" />
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="user" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="{M.passwordLabel}" />
				</g:customCell>
				<g:customCell>
					<g:PasswordTextBox ui:field="password" />
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:Button text="{M.acceptButton}" ui:field="button_1" />
		<g:Button text="{M.testButton}" ui:field="button_2" />
		<g:Button text="{M.resignButton}" ui:field="button" />
		<g:Label text="no error" ui:field="error_label" />
	</g:HTMLPanel>
</ui:UiBinder> 