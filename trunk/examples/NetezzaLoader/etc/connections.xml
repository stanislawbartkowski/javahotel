<st:connections xmlns:st="http://www.ibm.com/xmlns/prod/streams/adapters"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <connection_specifications>
    <!-- Here, you must substitute the DB name, DB user id, and DB password that are meaningful to your needs. -->
    <connection_specification name="warehouse">
      <ODBC database="NZSQL" user="testuser" password="secret" /> 
    </connection_specification>
  </connection_specifications>

  <access_specifications>
  
    <!-- This access specification is used by the ODBCSource operator in the application -->
    <access_specification name="towarehouse">
      <table tablename="testt" transaction_batchsize="1" rowset_size="1"/>
      <uses_connection connection="warehouse" />
      <native_schema>
        <column name="numb" type="BIGINT"/>
        <column name="name" type="VARCHAR" length="100"/>
      </native_schema> 
    </access_specification>
    
    <access_specification name="netezzaLoad">
      <table tablename="testt" transaction_batchsize="500000"/>
      <uses_connection connection="warehouse" /> 
      <native_schema>
        <column name="numb" type="BIGINT"/>
        <column name="name" type="VARCHAR" length="100"/>
      </native_schema>
    </access_specification>
    

  </access_specifications>

</st:connections> 