[verifyperson]
sqlexception: DROP FOREIGN TABLE F_PERSON
sql: CREATE FOREIGN TABLE F_PERSON (
  name varchar(100),
  range BIGINT
) 
 SERVER db2odbc_server
 OPTIONS (
   sql_query 'select * from person'
 );
verify: SELECT COUNT(*) AS C FROM F_PERSON
equal C 1
verify: SELECT * FROM F_PERSON
equal name John, equal RANGE 1
eof

sqlexception: DROP TABLE PERSON_FAMILYNAME
sql: CREATE TABLE PERSON_FAMILYNAME (NAME VARCHAR(100), FAMILYNAME VARCHAR(100))
sql: INSERT INTO PERSON_FAMILYNAME VALUES('John','Kovalsky')
verify: SELECT F.NAME,FAMILYNAME,RANGE FROM F_PERSON F,PERSON_FAMILYNAME P WHERE F.NAME = P.NAME
equal FAMILYNAME Kovalsky, equal RANGE 1
eof

